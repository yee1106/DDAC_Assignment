@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset Password Confirmation";
}

<center>
    <div class="container-fluid page-body-wrapper">
        <div class="content-wrapper">
            <div class="row">
                <i class="mdi mdi-account-check icon-lg text-success"></i>
                <h1 class="text-success">@ViewData["Title"]</h1>
                <div>
                    <p>Your password has been reset.</p>
                    <a class="btn btn-inverse-success" asp-area="Identity" asp-page="/Account/Login">Click Here to Log In</a>
                </div>
            </div>
        </div>
    </div>
</center>
