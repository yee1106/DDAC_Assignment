@model DDAC_Assignment.Models.Category

@{
    ViewData["Title"] = "Delete";
}


<link rel="stylesheet" href="~/css/NewsDetailsCSS.css" />
<style>
    .formLayout {
        padding: 50px;
        background-color: #f59b9b;
        border-radius: 25px;
    }
</style>

<div class="displayLayout">
    <div class="formLayout">
        <h1 style="color: aliceblue;">Delete Category</h1>
        <h3 class="font-weight-bold text-black">Are you sure you want to delete this?</h3>
        <div>
            <hr />
            <dl class="row  text-black">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CategoryName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CategoryName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ParentCategory)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ParentCategory)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ID" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="ml-2" style="color: white" asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>