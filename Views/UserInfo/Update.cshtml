
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model DDAC_Assignment.Areas.Identity.Data.DDAC_AssignmentUser

<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="col-md-3" > </div>
                <div class="col-md-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <a asp-action="Index" class="btn btn-secondary">Back</a>
                            <h4 class="card-title text-success" style="text-align: center">Update User</h4>
                            <form asp-action="Update" method="post">
                                <div class="form-group">
                                    <label asp-for="Id"></label>
                                    <input asp-for="Id" class="form-control" disabled type="text">
                                </div>
                                <div class="form-group">
                                    <label asp-for="FullName"></label>
                                    <input asp-for="FullName" class="form-control" placeholder="Full Name">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input type="email" asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="userrole"></label>
                                    <select asp-for="userrole" asp-items="@ViewBag.users" class="form-control"></select>
                                    <span asp-validation-for="userrole" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-success me-2" style="color:white">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">  </div>
            </div>
        </div>
    </div>
</div>
