@model IEnumerable<DDAC_Assignment.Models.User>

@if (ViewBag.msg != null)
{
    <script>alert("@ViewBag.msg");</script>
}


<div class="container-fluid page-body-wrapper">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <a asp-action="registerUser" class="btn btn-inverse-primary btn-fw">Create User</a>
                            <br />
                            <h4 class="card-title text-info" style="text-align: center">User Management</h4>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr style="text-align: center">
                                            <th>ID</th>
                                            <th>Full Name</th>
                                            <th>Email / Username </th>
                                            <th>Role</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (User user in Model)
                                        {
                                            <tr style="text-align: center">
                                                <td>@user.Id</td>
                                                <td>@user.FullName</td>
                                                <td>@user.Email</td>
                                                <td>@string.Join(", ", user.Roles.ToList())</td>
                                                <td>
                                                    <a class="btn btn-outline-success" asp-action="Update" asp-route-id="@user.Id">
                                                        Update
                                                    </a>
                                                    <a class="btn btn-outline-danger btn-fw" asp-action="Delete" asp-route-id="@user.Id">
                                                        Delete

                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

