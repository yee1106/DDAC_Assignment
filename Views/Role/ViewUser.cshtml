
@{
    ViewData["Title"] = "ViewUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Microsoft.AspNetCore.Identity.IdentityRole

<div class="container-fluid page-body-wrapper">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <a asp-action="Index" class="btn btn-secondary">Back</a>
                        <br />
                        <h4 class="card-title text-info" style="text-align: center">Users with Role: @Model.Name</h4>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr style="text-align: center">
                                        <th>ID</th>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (DDAC_Assignment.Areas.Identity.Data.DDAC_AssignmentUser user in ViewBag.users)
                                    {
                                    <tr style="text-align: center">
                                        <td>@user.Id</td>
                                        <td>@user.FullName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            <a class="btn btn-outline-success btn-fw" asp-controller="UserInfo" asp-action="Update" asp-route-id="@user.Id">
                                                Update User
                                            </a>
                                        </td>
                                        
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



