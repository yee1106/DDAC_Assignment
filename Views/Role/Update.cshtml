
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Microsoft.AspNetCore.Identity.IdentityRole

<div class="container-fluid page-body-wrapper">
        <div class="content-wrapper">
            <div class="row">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="col-md-3"> </div>
                <div class="col-md-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <a asp-action="Index" class="btn btn-secondary">Back</a>
                            <h4 class="card-title text-success" style="text-align: center">Update Role</h4>
                            <form asp-action="Update" method="post">
                                <div class="form-group">
                                    <label asp-for="Id"></label>
                                    <input asp-for="Id" class="form-control" disabled type="text">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Name"></label>
                                    <input asp-for="Name" class="form-control" placeholder="Role">
                                </div>
                                <button type="submit" class="btn btn-success me-2" style="color:white">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">  </div>
            </div>
        </div>
</div>


