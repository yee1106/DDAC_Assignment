
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model DDAC_Assignment.Models.PermissionViewModel


<div class="container-fluid page-body-wrapper">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <a asp-controller="Role" asp-action="Index" class="btn btn-secondary">Back</a>
                        <br />
                        <h4 class="card-title text-success" style="text-align: center">@ViewBag.role_name Role Permission</h4>
                        <div id="viewAll" class="card-body">
                            <form asp-controller="permission" method="post" asp-action="Update" class="d-inline">
                                <input asp-for="@Model.RoleId" type="hidden" />
                                <div class="table-responsive">
                                    <table class="table table-hover" id="permissionTable">
                                        <thead>
                                            <tr style="text-align: center">
                                                <th>
                                                    Type
                                                </th>
                                                <th>
                                                    Permission
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < Model.RoleClaims.Count(); i++)
                                            {
                                                <tr style="text-align: center">
                                                    <td>
                                                        <input asp-for="@Model.RoleClaims[i].Type" type="hidden" />
                                                        @Model.RoleClaims[i].Type
                                                    </td>
                                                    <td>
                                                        <input asp-for="@Model.RoleClaims[i].Value" type="hidden" />
                                                        @Model.RoleClaims[i].Value
                                                    </td>
                                                    <td>
                                                        <div class="form-check form-check-success">
                                                            <label class="form-check-label">
                                                                <input asp-for="@Model.RoleClaims[i].Selected" class="form-check-input form-check-success" />
                                                            </label>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                </div>
                                

                                <div class="col-sm-12" style="padding: 20px 20px 0px 0px">
                                    <button type="submit" class="btn btn-success me-2" style="color:white">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>